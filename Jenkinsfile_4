def smoke_var
def MY_var
def build_variant
def scriptOutput
def fileContent
def variableFromOutputFile
def match
def variableValue 
pipeline {
    agent {
        node {
            label 'temp'
            customWorkspace '/var/lib/jenkins/workspace/MainWorkspace_Jenkins'
        }
}
    parameters {
        choice(choices: ['Yes', 'No'], description: 'What is your choice?', name: 'Pick_a_Choice')
    }
    stages {

        stage('Example1') {
            steps {
                script{
                    dir('kernel') {
                    echo "$Workspace"
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: '290205a2-d519-45ae-90d3-0e23209e2c29', url: 'https://github.com/rajugajjela/git1.git']])
                    scriptOutput = sh(script: './simple.sh', returnStdout: true).trim()
                    writeFile file: 'output.txt', text: scriptOutput
                }
                }
            }
        }
       stage('Example2') {
            steps {
                    dir('Qssi') {
                    echo "$Workspace"
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: '290205a2-d519-45ae-90d3-0e23209e2c29', url: 'https://github.com/rajugajjela/git2.git']])
                }
            }
        }
       stage('Example3') {
            steps {
                    dir('vendor') {
                    echo "$Workspace"
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: '290205a2-d519-45ae-90d3-0e23209e2c29', url: 'https://github.com/rajugajjela/opengrok_test.git']])
                }
            }
        }
       stage('Example4') {
            steps {
                script{
                    echo "Selected choice: ${params.Pick_a_Choice}"
                    smoke_var="${params.Pick_a_Choice}"
                    MY_var='Hello'
                    build_variant='user_debug'
                    dir('kernel'){
                    echo "$Workspace"
                    fileContent = readFile 'output.txt'
                    echo "Content of output.txt: ${fileContent}"
                    variableFromOutputFile = fileContent.trim()
                    echo "Variable from output.txt: ${variableFromOutputFile}"
                    match = (fileContent =~ /Variable=(\d+)/)
                    if (match) {
                        variableValue = match[0][1].trim()
                        echo "Trimmed variable value: ${variableValue}"
                        echo "Using Trimmed Variable in the current stage: ${variableValue}"
                        } else {
                            echo "No match found for the variable pattern."
                        }
                    }
                }
            }
        }
        stage('Example5') {
            steps {
                    sh "echo $smoke_var"
                    sh "echo $MY_var"
                    sh "echo $build_variant"
            }
        }
    }
}
